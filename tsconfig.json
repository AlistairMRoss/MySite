{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": true,
    "paths": {
      "@shared-types/*": ["./shared-types/src/*"]
    },
    "noEmit": true
  },
  "files": [],
  "include": [
    "infra",
    "sst.config.ts"
  ],
  "references": [
    { "path": "./shared-types" },
    { "path": "./server/core" },
  ],
  "exclude": ["node_modules", "dist", "build", ".svelte-kit"]
}

