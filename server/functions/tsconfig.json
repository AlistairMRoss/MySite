{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "bundler", 
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "composite": true,
    "noEmit": true,
    "paths": {
      "@shared-types/*": ["../../shared-types/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "references": [
    { "path": "../core" },
    { "path": "../../shared-types" }
  ]
}